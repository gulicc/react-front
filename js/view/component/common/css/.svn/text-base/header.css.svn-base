:local .header {
  position: relative;
  padding: 0 30px 0 20px;
  height: 48px;
  background-color: #fff;
  z-index: 1;
}
:local .header h2 {
  line-height: 48px;
  font-size: 16px;
  color: #323436;
}
:local .header span {
  display: block;
  margin-right: 14px;
  width: 20px;
  height: 20px;
  background-image: url(../../../../../images/icon_user.png);
}
:local .header p {
  line-height: 18px;
  font-size: 14px;
  color: #1a1b1c;
}
:local .userName {
  position: relative;
  color: #ff530c;
}
:local .userName:hover :local .userHandle {
  display: block;
}
:local .userHandle {
  position: absolute;
  top: 16px;
  left: 50%;
  margin-left: -50px;
  padding: 11px 9px 0;
  display: none;
  width: 100px;
  height: 125px;
  background: url(../../../../../images/background/user_handle_background.png) bottom no-repeat;
}
:local .userInfo {
  display: block;
  margin-top: 22px;
  padding-bottom: 17px;
  line-height: 20px;
  text-align: center;
  border-bottom: 1px solid #f0f1f2;
}
:local .logOut {
  display: block;
  margin-top: 17px;
  line-height: 20px;
  text-align: center;
}
:local .userInfo:hover,
:local .logOut:hover {
  color: #ff530c;
}