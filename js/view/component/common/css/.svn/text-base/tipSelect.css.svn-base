:local .select {
  position: relative;
}
:local .select p {
  margin-right: 15px;
  line-height: 38px;
  font-size: 14px;
}
:local .list {
  padding-right: 70px;
}
:local .list:after {
  display: block;
  content: "";
  clear: both;
  zoom: 1;
}
:local .item {
  float: left;
  margin-right: 2px;
  height: 38px;
}
:local .select a {
  padding: 0 15px;
  line-height: 20px;
  font-size: 14px;
  cursor: pointer;
}
:local .select a.checked {
  color: #ffffff;
  background-color: #1f2b39;
}
:local .more {
  position: absolute;
  right: 10px;
  cursor: pointer;
}
:local .more p {
  margin: 0;
}
:local .more span {
  display: block;
  margin-left: 10px;
  width: 9px;
  height: 8px;
  background-image: url(../../../../../images/icon_more_down.png);
}